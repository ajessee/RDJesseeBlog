<section id="show_video">
  <div class="container-fluid">
    <!-- Flash Section -->
    <% if !flash.empty? %>
      <%= render 'shared/flash2' %>
    <% end %>

    <div class="row">

      <div class="col-lg-12">

      <div class="text-center">
        <video width="800" height="500" controls>
          <source src=<%= @video.video %> type="video/mp4">
        Your browser does not support the video tag.
        </video>
      </div>


        <div class="row">

          <% if !@video.comments.empty? %>
            <% @video.comments.each do |comment| %>
              <div class="col-lg-10 col-lg-offset-1">
                <br>
                <div class="panel panel-default">
                  <div class="panel-heading">
                    <h3 class="panel-title"><%= comment.author.name %> says:<span class="float-right"><%=time_ago_in_words(comment.created_at) %> ago</span> </h3>
                  </div>
                  <div class="panel-body">
                    <%= comment.content %>
                  </div>
                </div>
              </div>
            <% end %>
          <% end %>

          <div class="text-center">
            <% if !logged_in? %>
              <a href=" <%= login_path %> " class="btn btn-default btn-lg" id="editBlogButton" role="button">Want to leave a comment? Please log in.</a>
            <% else %>
              <%= form_for [@video, Comment.new] do |f| %>
              <%= f.hidden_field :user_id, value: current_user.id %>
              <%= f.hidden_field :video_id, value: @video.id %>
              <%= f.text_area :content, placeholder: "Add a comment", cols: "100", rows: "5" %><br/>
              <%= f.submit "Leave a comment on this story", class: "btn btn-default btn-lg" %>
              <% end %>
            <% end %>
          </div>

        </div>

      </div>
    </div>
  </section> 