<% provide(:title, "Edit user") %>
<section id="edit_user">
  <div class="container wow fadeIn">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h4>Update your profile</h4>
        <hr class="pageLine">
      </div>
    </div>

  </div>
</section>

<div class="row content-row">
  <div class="col-lg-8 col-lg-offset-2">
    <%= form_for @user do |f| %>
      <%= render 'shared/error_messages', object: f.object %>


      <div class="row control-group">
        <div class="form-group col-xs-12 floating-label-form-group controls">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control", placeholder: @user.name %>
        </div>
      </div>

      <div class="row control-group">
        <div class="form-group col-xs-12 floating-label-form-group controls">
        <%= f.label :email %>
        <%= f.email_field :email, class: "form-control", placeholder: @user.email, readonly: true %>
        </div>
      </div>

      <div class="row control-group">
        <div class="form-group col-xs-12 floating-label-form-group controls">
        <%= f.label :password %>
        <%= f.password_field :password, class: "form-control", placeholder: "Update Password" %>
        </div>
      </div>

      <div class="row control-group">
        <div class="form-group col-xs-12 floating-label-form-group controls">
        <%= f.label :password_confirmation, "Confirmation" %>
        <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm Password" %>
        </div>
      </div>

       <div class="row">
         <div class="form-group col-xs-12 text-center">
          <%= f.submit "Save changes", class: "btn btn-default btn-lg buttonDropShadow" %>
        </div>
      </div>  

    <% end %>

<!--     <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <a href="http://gravatar.com/emails" target="_blank">change</a>
    </div> -->

  </div>
</div>
