<section id="show_pictures">

  <div class="container-fluid text-center">

    <h4>Pictures</h4>
    <hr class="pageLine">
    <div>
    <a href=" <%= pictures_path %> " class="btn btn-default btn-lg buttonDropShadow" id="picturesButton" role="button">Full List</a>
    </div>

    <div class="row">
      <% @pictures.each do |picture| %>
        <a href="<%= picture_path(picture.id) %>" class="blog_links">
          <div class="col-lg-4 wow fadeIn">
            <div class="thumbnail box-shadow">
            <% if Rails.env.production? %>
              <% if picture.url %>
                <%= image_tag(picture.url_url(:picture_thumb), alt: "Picture", class: "img-responsive center-picture") %>
              <% else %>
                <i class="fa fa-user-circle fa-2x"></i>
              <% end %>
            <% end %>
            <% if Rails.env.development? %>
              <%= image_tag(picture.url, alt: "Picture", class: "img-responsive center-picture") %>
            <% end %>
            <div class="caption text-center">
              <h5><%= picture.caption %></h5>
            </div>
          </div>
        </div>
      </a>
      <% end %>
    </div>
  </div>
</section> 