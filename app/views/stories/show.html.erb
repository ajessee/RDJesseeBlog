<section id="blog">
  <div class="container">
    <!-- Flash Section -->
    <% if !flash.empty? %>
    <%= render 'shared/flash2' %>
    <% end %>

    <div class="row">
      <div class="col-lg-12">
        <div class="text-center">
          <h3 class="MajestiBannerBook"><%= @story.title.html_safe %></h4>
        </div>
        <hr class="colored" id="blogLine1">
        <div class="MajestiBannerBookPara">
          <%= @story.content.html_safe %>
        </div>
      </div>
    </div>

    <div class="row">
      <% if !@story.comments.empty? %>
        <% @story.comments.each do |comment| %>
          <div class="col-lg-10 col-lg-offset-1">
            <br>
            <div class="panel panel-default">
              <div class="panel-heading">
                <h3 class="panel-title"><%= comment.author.name %> says:
                <span class="float-right"><%=time_ago_in_words(comment.created_at) %> ago</span>
                </h3>
              </div>
              <div class="panel-body">
                <%= comment.content %>
                <% if logged_in? && current_user.id == comment.author.id || logged_in? && current_user.admin? %>
                  <div class="float-right">
                    <%= link_to "Delete", comment, method: :delete, class: "btn btn-danger",
                                                      data: { confirm: "Are you sure you want to delete your comment?" } %>
                  </div>  
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>

      <div class="text-center">
        <% if !logged_in? %>
          <a href=" <%= login_path %> " class="btn btn-default btn-lg" id="editBlogButton" role="button">Want to leave a comment? Please log in.</a>
        <% else %>
          <%= form_for [@story, Comment.new] do |f| %>
          <%= f.hidden_field :user_id, value: current_user.id %>
          <%= f.hidden_field :story_id, value: @story.id %>
          <%= f.text_area :content, placeholder: "Add a comment", cols: "100", rows: "5" %><br/>
          <%= f.submit "Leave a comment on this story", class: "btn btn-default btn-lg buttonDropShadow" %>
          <% end %>
        <% end %>
      </div>

      <div class="text-center top-margin-1-percent">
        <% if logged_in? && current_user.admin? %>
        <a href=" <%= edit_story_path(@story.id) %> " class="btn btn-default btn-lg buttonDropShadow" id="editBlogButton" role="button">Edit this story</a>
        <% end %>
      </div>

