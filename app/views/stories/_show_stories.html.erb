<div id="stories_container">

    <% if @active_button != 'alphabetical' %>
    <div class="row">
      <div class="col-sm-6 col-md-6 col-md-offset-3">
    <div class="alert alert-info" role="alert">
    <% if @active_button == "tag" %>
     <h6>There <%= @stories.count > 1 ? "are" : "is" %> <%= pluralize(@stories.count, "story") %> with that <%= @active_button %> </h6>
    <% else %>
      <h6>There <%= @stories.count > 1 ? "are" : "is" %> <%= pluralize(@stories.count, "story") %> from that <%= @active_button %> </h6>
    <% end %>
    </div>
    </div>
    </div>
    <% end  %>
    
  <div>
    <%= will_paginate @stories %>
  </div>

  <% @stories.each do |story| %>
  <div class="row panel panel-default">
    <div class="panel-body">
      <div class="col-md-4">
        <div >
          <% if Rails.env.development? %>
          <img src="<%= story.thumbnail_identifier %>" alt="<%= story.id %>">
          <% end %>
          <% if Rails.env.production? %>
          <img src="<%= asset_path(story.thumbnail) %>" alt="<%= story.id %>">
          <% end %>
        </div>
      </div>
      <div class="col-md-8">
        <div class="caption">
          <h3><%= story.title.html_safe %></h3>
          <p> <%= truncate(story.content.html_safe, length: 300, omission: '...') %> </p>
          <p> Year Written: <%= story.year_written %>, Don's age: <%= story.age %>, Decade: <%= story.decade %>  </p>
        </div>
        <div>
          <p><a href=" <%= story_path(story.id) %> " class="btn btn-primary" role="button">Read</a></p>
        </div>
      </div>
    </div>
    <% if story.all_tags != "" %>
    <div class="panel-footer">
      <% story.all_tags.split(",").each do |tag| %>
      <span><%= link_to tag.strip, "/stories/sort?sort=tag&tag=#{tag.strip}", class: "btn btn-primary", role: "button" %></span>
      <% end %>
    </div>
    <% end %>

  </div>
  <% end %>
</div>