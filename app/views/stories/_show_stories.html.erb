<div id="stories_container">

    <% if @active_button != 'alphabetical' %>
    <div class="row">
      <div class="col-sm-6 col-md-6 col-md-offset-3">
    <div class="alert alert-info" role="alert">
    <% if @active_button == "tag" %>
     <h6>There <%= @stories.count > 1 ? "are" : "is" %> <%= pluralize(@stories.count, "story") %> with that <%= @active_button %> </h6>
    <% else %>
      <h6>There <%= @stories.count > 1 ? "are" : "is" %> <%= pluralize(@stories.count, "story") %> from that <%= @active_button %> </h6>
    <% end %>
    </div>
    </div>
    </div>
    <% end  %>

  <div>
    <%= will_paginate @stories %>
  </div>

  <% @stories.each do |story| %>
  <a href="<%= story_path(story.id) %>" class="blog_links">
  <div class="row panel panel-default box-shadow bg-lightGrey">
    <div class="panel-body">
      <div class="col-md-4">
        <div >
          <% if Rails.env.development? %>
            <% if story.thumbnail.path != nil %>
            <%= image_tag(story.thumbnail_identifier, alt: "Logo", class: "img-responsive center-picture") %>
            <% else %>
            <i class="fa fa-picture-o fa-5x top-margin-15-percent"></i>
            <% end %>
          <% end %>
          <% if Rails.env.production? %>
            <% if story.thumbnail %>
            <img src="<%= asset_path(story.thumbnail) %>" alt="<%= story.id %>">
            <% else %>
            <i class="fa fa-user-circle fa-2x"></i>
            <% end %>
          <% end %>
        </div>
      </div>
      <div class="col-md-8">
        <div class="caption black">
          <h3><%= story.title.html_safe %></h3>
          <p> <%= truncate(story.content.html_safe, length: 500, omission: '...') %> </p>
        </div>
      </div>
    </div>
    <% if story.all_tags != "" %>
    <div class="panel-footer">
      <% story.all_tags.split(",").each do |tag| %>
      <span><%= link_to tag.strip, "/stories/sort?sort=tag&tag=#{tag.strip}", class: "btn btn-primary", role: "button" %></span>
      <% end %>
    </div>
    <% end %>

  </div>
  </a>
  <% end %>
</div>