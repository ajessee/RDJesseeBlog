<section id="blog_new">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 wow fadeIn">
            <%= form_for(@story, :html => { :multipart => true }) do |f| %>
              <%= render 'shared/error_messages', object: f.object %>
              <div>
                <%= f.label :title %>
                <%= f.trix_editor :title, class: 'form-control' %>
              </div>
              <div>
                <%= f.label :content %>
                <%= f.trix_editor :content, size: "30x10", class: 'form-control make-big' %>
              </div>
              <div>
                <%= f.label :year_written %>
                <%= f.select :year_written, (2005..2017).to_a, class: 'form-control' %>
              </div>
              <div>
                <%= f.label :decade %>
                <%= f.select :decade, (1..9).to_a, class: 'form-control' %>
              </div>
              <div>
              <%= f.label :age %>
              <%= f.select :age, (1..93).to_a, class: 'form-control' %>
              </div>
              <div>
                <%= f.label :all_tags %>
                <%= f.text_field :all_tags, placeholder: "Tags seperated with comma", class: 'form-control' %>
              </div>
              <div class="picture">
                <%= f.label "Upload thumbnail picture" %>
                <%= f.file_field :thumbnail %>
              </div>
              <br>
              <div>
                <%= f.submit "Submit Story", class: "btn btn-default btn-lg" %>
              </div>
            <% end %>
            </div>
        </div>
    </div>
</section> 