<section id="pictures_full">

  <!-- Flash Section -->
  <% if !flash.empty? %>
  <%= render 'shared/flash' %>
  <% end %>

  <div class="container-fluid text-center">
    <div>
      <%= will_paginate @pictures %>
    </div>

    <div class="row">
      <% @pictures.each do |picture| %>
      <a href="<%= picture_path(picture.id) %>" class="blog_links">
        <div class="col-lg-4 wow fadeIn">
          <div class="thumbnail box-shadow">
            <% if Rails.env.production? %>
            <% if picture.url %>
            <%= image_tag(picture.url_url(:picture_thumb), alt: "Picture", class: "img-responsive center-picture") %>
            <% else %>
            <i class="fa fa-user-circle fa-2x"></i>
            <% end %>
            <% end %>
            <% if Rails.env.development? %>
            <%= image_tag(picture.url, alt: "Picture", class: "img-responsive center-picture") %>
            <% end %>
            <div>
              <% if logged_in? && current_user.admin? %>
              <div>
                <%= link_to "Delete", picture, method: :delete, class: "btn btn-danger top-margin-1-percent",
                data: { confirm: "Are you sure you want to delete this picture?" } %>
              </div>  
              <% end %>
            </div>
            <div class="caption text-center">
            <h5><%= picture.caption %></h5>
            </div>
        </div>

      </div>
    </a>
    <% end %>
  </div>

</div>

</section> 