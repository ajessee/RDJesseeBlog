<section id="picture_edit">
    <div class="container-fluid">

      <div class="row">
        <div class="col-lg-12 text-center">
          <h4>Edit Picture</h4>
          <hr class="pageLine">
        </div>
      </div>

        <div class="row">
            <div class="col-lg-12 wow fadeIn">
            <%= form_for(@picture) do |f| %>
              <%= render 'shared/error_messages', object: f.object %>
                <%= f.hidden_field :user_id, value: current_user.id %>
              <div>
                <%= f.label :caption %>
                <%= f.trix_editor :caption, class: 'form-control', placeholder: @picture.caption %>
              </div>
              <div>
                <h5>If you want to change this picture:</h5>
                 <% if @picture.picture.attached? %>
                  <%= image_tag @picture.picture.variant(resize: "800x800", auto_orient: true), alt: "Picture", class: "img-responsive center-picture" %>
                 <% end %>
                <h5>Upload a new one below</h5>
              </div>
              <div class="picture">
                <%= f.label "Upload picture" %>
                <%= f.file_field :url %>
              </div>
              <br>
              <div class="text-center">
                <%= f.submit "Update Picture", class: "btn btn-default btn-lg buttonDropShadow" %>
              </div>
            <% end %>
            </div>
        </div>
    </div>
</section> 